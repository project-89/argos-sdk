    "rootDir": "src",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "types": ["node"],
    "target": "es2018"
  },
  "include": ["src/server/**/*", "src/shared/**/*", "src/core/**/*"],
  "exclude": ["src/client/**/*", "**/*.test.ts", "**/*.test.tsx"]
} 