{
  "name": "@oneirocom/argos-sdk",
  "version": "0.1.0",
  "description": "SDK for interacting with the Argos fingerprinting and tracking system",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "docs": "typedoc"
  },
  "dependencies": {
    "cross-fetch": "^4.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.1.1",
    "react": "^18.2.0",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.25.4",
    "typescript": "^5.3.3",
    "firebase-admin": "^11.11.1"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/src/__tests__/setup.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": {
            "module": "ESNext"
          }
        }
      ]
    },
    "extensionsToTreatAsEsm": [".ts", ".tsx"],
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
    "testMatch": ["<rootDir>/src/__tests__/**/*.test.ts"],
    "transformIgnorePatterns": [
      "node_modules/(?!(cross-fetch|firebase-admin)/)"
    ],
    "moduleDirectories": ["node_modules", "src"]
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "argos",
    "fingerprinting",
    "tracking",
    "analytics"
  ],
  "author": "Oneiro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oneirocom/argos-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/oneirocom/argos-sdk/issues"
  },
  "homepage": "https://github.com/oneirocom/argos-sdk#readme"
}
